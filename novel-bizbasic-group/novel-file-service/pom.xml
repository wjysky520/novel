<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.wjysky</groupId>
        <artifactId>novel-bizbasic-group</artifactId>
        <version>1.0.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>novel-file-service</artifactId>
    <version>1.0.0</version>
    <name>novel-file-service</name>
    <description>文件服务</description>
    <properties>
        <java.version>8</java.version>
    </properties>
    <dependencies>
        <!-- 公共服务依赖 start -->
        <dependency>
            <groupId>com.wjysky</groupId>
            <artifactId>novel-comm</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wjysky</groupId>
            <artifactId>novel-bizcomm-file</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- 公共服务依赖 end -->

        <!-- 框架依赖 start -->
        <dependency>
            <groupId>com.wjysky</groupId>
            <artifactId>novel-framework-mvc</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.wjysky</groupId>
            <artifactId>novel-framework-ioc</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- 框架依赖 end -->

        <!-- 组件依赖 start -->
        <dependency>
            <groupId>com.wjysky</groupId>
            <artifactId>novel-components-minio</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.wjysky</groupId>
            <artifactId>novel-components-idgenerator</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <!-- 组件依赖 end -->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <!-- 单元测试插件 -->
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- 略过整个单元测试的执行，不推荐 -->
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
